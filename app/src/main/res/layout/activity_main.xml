<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager"></androidx.viewpager.widget.ViewPager>

    <steelkiwi.com.library.view.IndicatorView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/indicatorView"
        android:layout_alignParentBottom="true"
        app:iv_bar_color="@color/black"
        app:iv_corner_radius="4dp"
        app:iv_idle_color="#999999"
        app:iv_select_color="#666666"
        app:iv_size="40dp"
        app:iv_text_color="@color/white"
        app:iv_text_size="12sp"
        app:iv_action="hung_down"
        app:iv_item_amount="3"></steelkiwi.com.library.view.IndicatorView>
</RelativeLayout>